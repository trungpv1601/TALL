<div>
    @switch($type)
    @case('CREATE')
    <livewire:[sub_folder].[view].create />
    @break

    @case('VIEW')
    <livewire:[sub_folder].[view].view :id="$modelId" />
    @break

    @case('UPDATE')
    <livewire:[sub_folder].[view].update :id="$modelId" />
    @break

    @default
    <livewire:[sub_folder].[view].table />
    @endswitch
</div>
